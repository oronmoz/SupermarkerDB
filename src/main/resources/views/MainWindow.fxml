<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.supermarket.controllers.MainWindowController">
    <left>
        <VBox spacing="10" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <Button text="Dashboard" onAction="#showDashboard" maxWidth="Infinity"/>
            <Button text="Supermarket Management" onAction="#showSupermarketManagement" maxWidth="Infinity"/>
            <Button text="Start Shopping" onAction="#startNewSale" maxWidth="Infinity"/>
            <Button text="Addresses" onAction="#showAddressManagement" maxWidth="Infinity"/>
            <Button text="Suppliers" onAction="#showSupplierManagement" maxWidth="Infinity"/>
            <Button text="Reports" onAction="#showReports" maxWidth="Infinity"/>
            <Button text="About" onAction="#showAbout" maxWidth="Infinity"/>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
    <bottom>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <Label fx:id="statusLabel" text="Ready"/>
        </HBox>
    </bottom>
</BorderPane>